<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sliding_menu_text">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">@dimen/sliding_text_size</item>
    </style>

    <style name="header_text">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="black_large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sliding_text_size</item>
    </style>

    <style name="black_small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="question_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="keyboard_btn">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/keyboard_btn</item>
    </style>

</resources>
